<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@color/mainheader">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Title kjfj fkjf fkjdkfdkjdkf fjkdfj f j kf"
                android:gravity="center"
                android:id="@+id/title_movie"
                android:textColor="@color/white"
                android:textSize="@dimen/main_title"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginEnd="@dimen/fab_margin"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:src="@drawable/test"
                android:id="@+id/image_detail"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/top_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8787"
                    android:id="@+id/year"
                    android:textSize="@dimen/year_size"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="894 min"
                    android:id="@+id/duration"
                    android:textSize="@dimen/min_size"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="7/10"

                    android:id="@+id/rate"
                    android:textSize="@dimen/small_size"
                    android:textColor="@color/black"
                    />
                <Button
                    android:layout_width="@dimen/width_btn"
                    android:layout_height="@dimen/btn_h"
                    tools:text="Set As  favourite"
                    android:textAllCaps="false"
                    android:id="@+id/favourite_btn"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@color/gray"
                    android:textSize="@dimen/small_size"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin"
            android:id="@+id/description"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="@dimen/top_margin"
            android:layout_marginRight="@dimen/top_margin"
            >
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin"
            tools:text="Trailers:"
            android:textSize="@dimen/min_size"
            android:id="@+id/trailer"/>
    </LinearLayout>

</RelativeLayout>
